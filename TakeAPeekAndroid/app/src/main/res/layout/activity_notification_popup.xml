<RelativeLayout
          android:name="com.google.android.gms.maps.SupportMapFragment"
          xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:map="http://schemas.android.com/apk/res-auto"
          xmlns:tools="http://schemas.android.com/tools"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          tools:context="com.takeapeek.notifications.NotificationPopupActivity"
          android:background="@drawable/gradient_gray2_fade"
          android:padding="20dp">

    <ImageView
        android:id="@+id/button_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/button_close"
        android:layout_alignParentRight="true" />

    <!-- Map and overlays -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="110dp"
        android:layout_centerHorizontal="true"
        android:visibility="visible"/>

    <TextView
        android:id = "@+id/request_displayname_on_map"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:textColor="@color/tap_white"
        android:shadowColor="@color/tap_darkgray"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:layout_alignTop="@+id/map"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:paddingTop="5dp"
        android:background="@drawable/gradient_top"
        android:visibility="visible"/>

    <TextView
        android:id = "@+id/request_location_on_map"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="12sp"
        android:textColor="@color/tap_white"
        android:shadowColor="@color/tap_darkgray"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:layout_alignBottom="@+id/map"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal|bottom"
        android:paddingBottom="5dp"
        android:background="@drawable/gradient_bottom"
        android:visibility="visible"/>

    <View
        android:id = "@+id/corner_overlay_on_map_top"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="110dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_corner_overlay_gray2_top"
        android:visibility="visible" />

    <View
        android:id = "@+id/corner_overlay_on_map_bottom"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="110dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_corner_overlay_gray2_bottom"
        android:visibility="visible" />

    <!-- END Map and overlays -->

    <!-- Preview Peek -->
    <RelativeLayout
        android:id="@+id/peek_notification_preview"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:background="@color/tap_white"
        android:visibility="gone" >

        <RelativeLayout
            android:id = "@+id/user_peek_notification_thumbnail_layout"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true" >

            <ImageView
                android:id = "@+id/user_peek_notification_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop" />

            <ImageView
                android:id = "@+id/user_peek_notification_thumbnail_play"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_video_play" />

        </RelativeLayout>

        <TextView
            android:id = "@+id/user_peek_notification_thumbnail_time"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="12sp"
            android:padding="5dp"
            android:background="@drawable/gradient_top"
            android:textColor="@color/tap_white"
            android:shadowColor="@color/tap_darkgray"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"/>

        <TextView
            android:id = "@+id/user_peek_notification_thumbnail_address"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/user_peek_notification_thumbnail_layout"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal|bottom"
            android:textSize="12sp"
            android:textColor="@color/tap_white"
            android:shadowColor="@color/tap_darkgray"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:layout_marginTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/gradient_bottom"/>

        <View
            android:id = "@+id/corner_overlay_on_preview"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded_corner_overlay_yellow" />

    </RelativeLayout>
    <!-- END Preview Peek -->

    <RelativeLayout
        android:id="@+id/titles"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="310dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/rounded_corner_bottom" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/big_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/tap_blue"
                android:textSize="15sp"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/small_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/tap_darkgray"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titles"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" >

        <LinearLayout
            android:id="@+id/button_send_peek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/button_peek_send" />

            <TextView
                android:id="@+id/textview_button_send_peek"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/button_blue"
                android:textSize="12sp"
                android:padding="3dp"
                android:textColor="@color/tap_white"
                android:text="@string/textview_send_peek"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/button_request_peek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/button_peek_request" />

            <TextView
                android:id="@+id/textview_button_request_peek"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/button_green"
                android:textSize="12sp"
                android:padding="3dp"
                android:textColor="@color/tap_white"
                android:text="@string/textview_request_peek"/>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>