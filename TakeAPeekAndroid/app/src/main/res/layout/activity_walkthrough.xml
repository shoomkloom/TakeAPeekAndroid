<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                tools:context="com.takeapeek.Walkthrough.WalkthroughActivity">

    <com.takeapeek.common.AutoFitTextureView
        android:id="@+id/texture"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_yellow_fade">

        <android.support.v4.view.ViewPager
            android:id="@+id/pager_introduction"
            android:layout_width="match_parent"
            android:layout_height="402dp"
            android:layout_marginTop="50dp"
            tools:listitem="@layout/item_walkthrough" />

        <LinearLayout
            android:id="@+id/viewPagerCountDots"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal|top"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/textview_button_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:text="@string/skip"
            android:textSize="25sp"
            android:shadowColor="@color/tap_darkgray"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:textColor="@color/tap_white"/>

        <TextView
            android:id="@+id/textview_button_letsgo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginBottom="30dp"
            android:text="@string/lets_go"
            android:textSize="20sp"
            android:textColor="@color/tap_white"
            android:translationZ="4dp"
            android:stateListAnimator="@anim/button_elevation"
            android:background="@drawable/button_green"
            android:visibility="gone"/>

    </RelativeLayout>
</RelativeLayout>