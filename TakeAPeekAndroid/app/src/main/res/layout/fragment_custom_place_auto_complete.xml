<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="4dp"
    android:background="@drawable/rounded_corner_large" >

    <EditText
        android:id="@+id/editWorkLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableLeft="@drawable/ic_place"
        android:drawablePadding="5dp"
        android:hint="@string/search_location"
        android:singleLine="true"
        android:textColor="@color/tap_darkgray"
        android:inputType="textNoSuggestions"
        android:textSize="16sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#00ffffff"/>

    <TextView
        android:id="@+id/textview_trending"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@drawable/button_blue_rounded"
        android:textStyle="bold"
        android:textSize="12sp"
        android:padding="3dp"
        android:textColor="@color/tap_white"
        android:text="@string/trending_locations"

        />

</LinearLayout>