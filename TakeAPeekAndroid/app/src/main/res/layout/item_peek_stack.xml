            android:layout_height="200dp"
            android:layout_alignBottom="@+id/user_peek_stack_thumbnail"
            android:layout_alignLeft="@id/user_peek_stack_thumbnail"
            android:layout_alignRight="@+id/user_peek_stack_thumbnail"
            android:layout_alignTop="@id/user_peek_stack_thumbnail"
            android:background="@drawable/rounded_corner_overlay_gray" />

