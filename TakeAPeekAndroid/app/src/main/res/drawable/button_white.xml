<?xml version="1.0" encoding="UTF-8"?> 
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" android:color="@color/tap_lightblue">
        <shape>
		     <!--
		     <gradient android:startColor="#D2E0E2" android:endColor="#D2E0E2"/>
		      -->  
		    <solid android:color="@color/tap_white" />
		    <corners android:bottomRightRadius="20dp" android:bottomLeftRadius="20dp"
		     android:topLeftRadius="20dp" android:topRightRadius="20dp"/>
		</shape>
	</item>

    <item android:state_focused="true" android:color="@color/tap_blue">
        <shape>
		     <!--
		     <gradient android:startColor="#D2E0E2" android:endColor="#D2E0E2"/>
		      -->  
		    <solid android:color="@color/tap_white_faded" />
		    <corners android:bottomRightRadius="20dp" android:bottomLeftRadius="20dp"
		     android:topLeftRadius="20dp" android:topRightRadius="20dp"/>
		</shape>
	</item>
	
    <item android:color="@color/tap_blue">
        <shape>
		     <!--
		     <gradient android:startColor="#D2E0E2" android:endColor="#D2E0E2"/>
		      -->  
		    <solid android:color="@color/tap_white_faded" />
		    <corners android:bottomRightRadius="20dp" android:bottomLeftRadius="20dp"
		     android:topLeftRadius="20dp" android:topRightRadius="20dp"/>
		</shape>
	</item>
    
</selector>